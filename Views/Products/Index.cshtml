@model IEnumerable<MyMvcApp.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<h2>Products</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Stock</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Price)</td>
                <td>@Html.DisplayFor(modelItem => item.Stock)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Update</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Read</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    <a asp-action="Purchase" asp-route-id="@item.Id" class="btn btn-primary">Buy</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<p>
    <a href="@Url.Action("DownloadReport", "Products")" class="btn btn-secondary">Download Report</a>
</p>