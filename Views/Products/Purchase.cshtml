@model MyMvcApp.Models.Product

@{
    ViewBag.Title = "Purchase Product";
}

<h2>Purchase @Model.Name</h2>

<form asp-action="Purchase">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Stock">Available Stock</label>
        <input asp-for="Stock" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label for="Quantity">Quantity to Purchase</label>
        <input type="number" class="form-control" id="Quantity" name="quantity" min="1" max="@Model.Stock" required />
    </div>
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-primary">Purchase</button>
</form>
